<%= form_with model: @user do |f| %>
 <div class="container">
  <div class="row">
   <h2>マイページ編集</h2>
  </div>
  <div class="row mb-2">
   <div class="col-lg-3"></div>
   <div class="col-lg-2">名前</div>
   <div class="col-lg-2"><%= f.text_field :name %></div>
   <div class="col-lg-1"></div>
  </div>
  <div class="row mb-2">
   <div class="col-lg-3"></div>
   <div class="col-lg-2">年代</div>
   <div class="col-lg-2"><%= f.select :age, User.ages.keys.map {|k| [I18n.t("enums.user.age.#{k}"), k]}, include_blank: true %></div>
   <div class="col-lg-1"></div>
  </div>
  <div class="row mb-2">
   <div class="col-lg-3"></div>
   <div class="col-lg-2">性別</div>
   <div class="col-lg-2"><%= f.select :sex, User.sexes.keys.map {|k| [I18n.t("enums.user.sex.#{k}"), k]}, include_blank: true %></div>
   <div class="col-lg-1"></div>
  </div>
  <div class="row mb-2">
   <div class="col-lg-3"></div>
   <div class="col-lg-2">電話番号</div>
   <div class="col-lg-2"><%= f.text_field :telephone %></div>
   <div class="col-lg-1"></div>
  </div>
  <div class="row mb-2">
   <div class="col-lg-3"></div>
   <div class="col-lg-2">メールアドレス</div>
   <div class="col-lg-2"><%= f.text_field :email %></div>
   <div class="col-lg-1"></div>
  </div>
  <div class="row mb-2">
   <div class="col-lg-3"></div>
   <div class="col-lg-2">説明文</div>
   <div class="col-lg-2"><%= f.text_area :introduction %></div>
   <div class="col-lg-1"></div>
  </div>
  <div class="row mb-2">
   <div class="col-lg-5"></div>
   <div class="col-lg-2"><%= f.submit "保存する", class: "btn btn-sm btn-success" %></div>
   <div class="col-lg-6"></div>
  </div>
 </div>
<% end %>