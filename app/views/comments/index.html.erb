コメント(全<%= @comments.count %>件)
<%= link_to "投稿する", new_shop_comment_path %>
<% @comments.each do |comment| %>
 <% if comment.favorited_by?(current_user) %>
  <%= link_to comment_favorites_path(comment.id), method: :delete do %>
   ♥<%= comment.favorites.count %> いいね
  <% end %>
 <% else %>
  <%= link_to comment_favorites_path(comment.id), method: :post do %>
   ♡<%= comment.favorites.count %> いいね
  <% end %>
 <% end %>

 <%= comment.body %>
 <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
 <%= comment.user.name %>
 <% if comment.user == current_user %>
  <%= link_to "削除", comment_path(comment.id), method: :delete %>
 <% end %>
<% end %>