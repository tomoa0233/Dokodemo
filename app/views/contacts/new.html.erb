<div class="container">
 <div class="row mt-4">
  <div class="col-lg-2"></div>
   <h3>お問い合わせ</h3>
 </div>
 <% if @contact.errors.any? %>
  <%= @contact.errors.count %>件のエラーが発生しました
   <ul>
    <% @contact.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   </ul>
 <% end %>
 <%= form_with model: @contact do |f| %>
 <div class="row mt-4">
  <div class="col-lg-3"></div>
  <div class="col-lg-2">送信アドレス</div>
  <div class="col-lg-4"><%= f.text_field :email, class: 'form-control' %></div>
  <div class="col-lg-3"></div>
 </div>
 <div class="row mt-4">
  <div class="col-lg-3"></div>
  <div class="col-lg-2">お問い合わせ内容</div>
  <div class="col-lg-4"><%= f.text_area :message, class: 'form-control' %></div>
  <div class="col-lg-3"></div>
 </div>
 <div class="row mt-4">
  <div class="col-lg-6"></div>
  <div class="col-lg-2"><%= f.submit '送信', class: "btn btn-primary" %></div>
 </div>
</div>
<% end %>