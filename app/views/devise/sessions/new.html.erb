<%= form_with model: @user, url: user_session_path, local: true do |f| %>
 <div class="container">
  <div class="row">
    <h2>ログイン</h2>
  </div>
  <div class="row mb-2">
    <div class="col-lg-2"></div>
    <div class="col-lg-3">メールアドレス</div>
    <div class="col-lg-3"><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" %></div>
    <div class="col-lg-4"></div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-2"></div>
    <div class="col-lg-3">パスワード</div>
    <div class="col-lg-3"><%= f.password_field :password %></div>
    <div class="col-lg-4"></div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-5"></div>
    <div class="col-lg-3"><%= f.submit "ログイン", class: "btn btn-sm btn-primary" %></div>
    <div class="col-lg-4"></div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-3"></div>
    <div class="col-lg-6"><h5>会員登録はこちらからどうぞ。<%= render "devise/shared/links" %></h5></div>
  </div>
  <div class="row mb-2">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <% if devise_mapping.rememberable? %>
       <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
       </div>
      <% end %>
    </div>
  </div>
 </div>
<% end %>



