<div class="container">
 <div class="row mt-4">
  <div class="col-lg-1"></div>
   <h3>タグ一覧</h3>
 </div>
 <div class="row mt-4">
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
<% @tags.each do |tag| %>
 <span>
  <%= link_to "#{tag.name} (  #{tag.shops.count} )", tag_path(tag), class: "btn btn-info mb-2 mr-2" %>
 </span>
<% end %>
  </div>
  <div class="col-lg-2"></div>
 </div>

</div>


